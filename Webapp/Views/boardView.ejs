<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/CSS/boardView_styles.css">
  <title>Board</title>
</head>
<body>
  <%- include('partials/boardViewHeader')-%>
  <div class="board-ticket-area-container">
    <div class="board-col" id="col-1">
      <div class=board-col-header>To do</div>
      <% boardTickets.forEach((ticket) => { %>
        <% if(ticket.ticketStatus === 'TODO'){ %>
          <%- include('./partials/ticket', {ticket})-%>
        <%}%>
      <%})%>
    </div>
    <div class="board-col" id="col-2">
      <div class=board-col-header>In progress</div>
      <% boardTickets.forEach((ticket) => { %>
        <% if(ticket.ticketStatus === 'In progress'){ %>
          <%- include('./partials/ticket', {ticket})-%>
        <%}%>
      <%})%>
    </div>
    <div class="board-col" id="col-3">
      <div class=board-col-header>Testing</div>
      <% boardTickets.forEach((ticket) => { %>
        <% if(ticket.ticketStatus === 'Testing'){ %>
          <%- include('./partials/ticket', {ticket})-%>
        <%}%>
      <%})%>
    </div>
    <div class="board-col" id="col-4">
      <div class=board-col-header>Done</div>
      <% boardTickets.forEach((ticket) => { %>
        <% if(ticket.ticketStatus === 'Done'){ %>
          <%- include('./partials/ticket', {ticket})-%>
        <%}%>
      <%})%>
    </div>
  </div>
  <div class=create-ticket-btn>+</div>
  <%-include('./createTicketModal')-%>
  <%-include('./editTicketModal')-%>

  <script src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js"></script>
  <script type="text/javascript" src="/JS/bundle.js"></script>
</body>
</html>
